<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.adamclmns.jamm.fx.views.controllers.MediaControls">

    <Button id="reversePrevious" mnemonicParsing="false" ><!--onAction="#previous"-->
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-skip-backward.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button id="play" mnemonicParsing="false" onAction="#playSelectedFile">
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-playback-start.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button id="pause" mnemonicParsing="false" ><!-- onAction="#pause"-->
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-playback-pause.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button id="stop" mnemonicParsing="false"><!-- onAction="#stop" -->
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-playback-stop.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button id="skipNext" mnemonicParsing="false" ><!--onAction="#skip"-->
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-skip-forward.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <VBox prefWidth="400" minWidth="200" maxWidth="600" alignment="TOP_CENTER">
        <Label fx:id="nowPlaying" text="Nothing Playing"/>
        <Slider id="playProgress"/>
    </VBox>
    <ToggleButton id="shuffleToggle" mnemonicParsing="false">
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-playlist-shuffle.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton id="shuffleToggle" mnemonicParsing="false">
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="images/mediaControls/Breezeicons-actions-22-media-playlist-repeat.svg.png"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
</HBox>

